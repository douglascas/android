<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dogs.DogDetailActivity">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dogPhoto"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/logo2" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_name_is"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_age_is"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvPorte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_gait_is"
            android:textSize="24sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdote"
            android:layout_width="127dp"
            android:layout_height="0.3in"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="@string/adopt" />

    </LinearLayout>
</ScrollView><!--<?xml version="1.0" encoding="utf-8"?>-->
